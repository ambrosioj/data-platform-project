{
  "name": "Dev Container for Spark, Airflow, and Jupyter Notebooks",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "python.pythonPath": "/usr/local/bin/python",
    "jupyter.enableAutoComplete": true
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "vscode"
}